{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es6","DOM"],
    "allowJs": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "types": ["node", "jest"],
    "skipLibCheck": true,
    "declaration": true,
    // "emitDeclarationOnly": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "src/**/*.spec.ts", 
    "configs/*.js"
  ],
}
